@model ZipShip.Models.OrderViewModel

@{
    ViewBag.Title = "DeleteOrder";
}
<head>
    <style>
        a:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        .btn:hover {
            color: white;
        }

        a {
            color: white;
            background-color: purple;
        }

        input:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        input {
            color: white;
            background-color: purple;
        }
        body {
            background-image: url('/Content/Images/orders.jpg');
            position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }

        .text {
            color: white;
        }

        .h1, h2, h3, p {
            color: white;
        }
    </style>
</head>
<body class="text">
    <h2>DeleteOrder</h2>

    <h3>Are you sure you want to delete this Order?</h3>
    <div>
        <h4>OrderViewModel</h4>
        <hr />


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions" style="padding-left:210px">
                <input type="submit" value="Confirm Delete" class="btn" style="font-weight:bolder;width:280px;height:40px" />

            </div>
            <br />
            <div class="form-group" style="padding-left:210px">
                <a href="~/Account/Index" class="btn" style="width:280px;height:40px"><b class="pt-3">My Account</b></a>
            </div>
        }
    </div>
</body>
