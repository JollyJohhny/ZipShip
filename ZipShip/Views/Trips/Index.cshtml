@model IEnumerable<ZipShip.Models.TripListViewModel>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        a:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        .btn:hover {
            color: white;
        }

        a {
            color: white;
            background-color: purple;
        }

        input:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        input {
            color: white;
            background-color: purple;
        }
        body {
            background-image: url('/Content/Images/trips.jpg');
            position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }
        .text {
            color: white;
        }

        .h1, h2, h3 {
            color: white;
        }
    </style>
</head>
<body class="text">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }
    }

    <h2>Index</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td></td>
            </tr>
        }

    </table>
    <div style="padding-left:390px">
        <div class="form-group">
            <a href="~/Trips/Create" class="btn" style="width:330px;height:40px"><b class="pt-3">Add Trip</b></a>
        </div>
        <div class="form-group">
            <a href="~/Trips/Filtered" class="btn" style="width:330px;height:40px"><b class="pt-3">Filtered Trips</b></a>
        </div>
        <div class="form-group">
            <a href="~/Trips/MyTrips" class="btn" style="width:330px;height:40px"><b class="pt-3">My Trips</b></a>
        </div>
        <div class="form-group">
            <a href="~/Account/Index" class="btn" style="width:330px;height:40px"><b class="pt-3">My Account</b></a>
        </div>
    </div>


</body>

