@{
    ViewBag.Title = "Home Page";
}


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <style>

        html {
            box-sizing: border-box;
        }

        a:hover {
            background-color: transparent;
            color: purple;
            border-color: purple;
        }

        .btn:hover {
            color: purple;
        }

        a {
            color: white;
            background-color: purple;
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        .column {
            float: left;
            width: 25%;
            margin-bottom: 16px;
            padding: 0 20px;
        }

        .card {
            box-shadow: 0 12px 20px 0 rgb(128, 128, 128);
        }

        .container {
            padding: 0 16px;
        }

            .container::after, .row::after {
                content: "";
                clear: both;
                display: table;
            }

        .title {
            color: black;
        }

        .footer {
            font-weight: bold;
            font-size: 20px;
            width: 50%;
            height: 25%;
            color: black;
            text-align: center;
        }

        .body {
        }
    </style>
</head>
<body class="text">

    <div>
        <img src="~/Content/Images/logo_color.png" style="height:120px;width:160px;padding-left:50px" />
        <h2 style="color:purple">Explore The World!</h2>
        <h2>Shop Products From Abroad, Delivered to you by Travelers.</h2>
    </div>


    <div class="form-group">
        <a href="~/Admin/Login" class="btn" style="width:400px;height:40px"><b>Admin Login</b></a>
    </div>


    <center><h3>Recent Completed Orders</h3></center>
    <br>

    <div class="row">
