@model IEnumerable<ZipShip.Models.OrderViewModel>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        a:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        .btn:hover {
            color: white;
        }

        a {
            color: white;
            background-color: purple;
        }

        input:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        input {
            color: white;
            background-color: purple;
        }
        body {
            background-image: url('/Content/Images/orders.jpg');
            position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }

        .text {
            color: white;
        }

        .h1, h2, h3, p {
            color: white;
        }
    </style>
</head>
<body class="text">


    <h2>List Of Orders</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DealPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedByName)
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.AddedBy)
            </th>
            <th></th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>

            <td>
                <img src="@item.ImagePath" style="width:30px;height:30px;border-radius:50%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DealPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedByName)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.AddedBy)
            </td>
            <td>
                <a href="/Order/Select/@item.Id" class="btn btn-default" style="background-color:purple;color:white;width:180px;height:40px">Select</a>
            </td>
            <td>
                <a href="/Order/Details/@item.AddedBy" class="btn btn-default" style="background-color:purple;color:white;width:180px;height:40px">Shopper Details</a>
            </td>
        </tr>
        }

    </table>
    <br />
    <br />
    <div style="padding-left:390px">
        <div class="form-group">
            <a href="~/Order/Create" class="btn" style="width:330px;height:40px"><b class="pt-3">Add Order</b></a>
        </div>
        <div class="form-group">
            <a href="~/Order/MyList" class="btn" style="width:330px;height:40px"><b class="pt-3">My Placed Orders</b></a>
        </div>
        <div class="form-group">
            <a href="~/Order/SelectedOrder" class="btn" style="width:330px;height:40px"><b class="pt-3">My Selected Orders</b></a>
        </div>
        <div class="form-group">
            <a href="~/Account/Index" class="btn" style="width:330px;height:40px"><b class="pt-3">My Account</b></a>
            
        </div>

    </div>
</body>
