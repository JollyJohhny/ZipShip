@model IEnumerable<ZipShip.Models.OrderViewModel>

@{
    ViewBag.Title = "MyList";
}
<head>
    <style>
        a:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        .btn:hover {
            color: white;
        }

        a {
            color: white;
            background-color: purple;
        }

        input:hover {
            background-color: transparent;
            color: white;
            border-color: white;
            font-weight: bolder;
        }

        input {
            color: white;
            background-color: purple;
        }
        body {
            background-image: url('/Content/Images/orders.jpg');
            position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }

        .text {
            color: white;
        }

        .h1, h2, h3, p {
            color: white;
        }
    </style>
</head>
<body class="text">
    <h2>My Orders</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DealPrice)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DealPrice)
            </td>

            <td>
                <a href="/Order/Edit/@item.Id" class="btn" style="width:180px;height:40px">Edit</a>
            </td>
            <td>
                <a href="/Order/DeleteOrder/@item.Id" class="btn" style="width:180px;height:40px">Delete</a>
            </td>
        </tr>
        }


    </table>
    <center>
        <div class="form-group">
            <a href="~/Account/Index" class="btn" style="width:330px;height:40px"><b class="pt-3">My Account</b></a>
        </div>
    </center>
</body>
